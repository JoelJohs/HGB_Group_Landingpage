---
import { Image } from "astro:assets";
import hgbLogo from "../assets/about/hgb_hero_logo.png";
import presentacionVideo from "../assets/about/presentacion.mp4";
import member1 from "../assets/about/members/breaker_electric.png";
import member2 from "../assets/about/members/fuse_store.png";
import member3 from "../assets/about/members/gateway.png";
import member4 from "../assets/about/members/abv.svg";
import member5 from "../assets/about/members/light_n.png";
import member6 from "../assets/about/members/odosa.png";
import member7 from "../assets/about/members/surtidora.png";
import historia from "../assets/about/historia_experiencia.jpeg?url";
---

<section
  id="nosotros"
  class="relative py-12 px-4 bg-[var(--color-background-50)] overflow-hidden"
>
  <div class="container mx-auto">
    <h2 class="section-title text-[var(--color-text-900)] mb-6 text-center">
      Nosotros
    </h2>

    <!-- ¿Quiénes somos? card -->
    <div class="p-8 bg-white shadow rounded-[5px] mb-8">
      <h3
        class="section-subtitle text-[var(--color-primary-500)] mb-4 text-center"
      >
        ¿Quiénes somos?
      </h3>
      <div
        class="flex flex-col md:flex-row items-center justify-center md:gap-8"
      >
        <div class="md:w-1/2 flex flex-col items-center justify-center">
          <div class="w-full max-w-[200px] mb-4">
            <Image
              src={hgbLogo}
              alt="Logo HGB"
              class="w-full h-full object-contain"
            />
          </div>
          <p class="section-text">
            HGB Group está conformado por siete empresas que ofrecen soluciones
            eléctricas e iluminación. Operamos con marcas de distribución
            directa, garantizando soporte técnico eficiente y personalizado a
            nuestros clientes.
          </p>
        </div>
        <div
          class="md:w-1/2 mt-4 md:mt-0 flex items-center justify-center h-full"
        >
          <video
            src={presentacionVideo}
            controls
            autoplay
            muted
            loop
            class="w-full h-full object-contain"></video>
        </div>
      </div>
    </div>

    <!-- Slides wrapper con padding-bottom -->
    <div id="about-carousel" class="min-h-[450px] relative pb-8">
      <!-- Slide 1: Miembros -->
      <div class="slide p-4">
        <div
          class="p-8 bg-white shadow rounded flex flex-col items-center md:h-[450px]"
        >
          <h3
            class="section-subtitle text-[var(--color-primary-500)] mb-4 text-center"
          >
            Miembros
          </h3>
          <!-- Mobile -->
          <div class="md:hidden space-y-4 w-full">
            <div class="grid grid-cols-2 gap-4">
              <div
                class="h-24 flex items-center justify-center p-2 bg-gray-50 rounded-[5px] shadow"
              >
                <Image
                  src={member1}
                  alt="Miembro 1"
                  class="w-full h-full object-contain"
                />
              </div>
              <div
                class="h-24 flex items-center justify-center p-2 bg-gray-50 rounded-[5px] shadow"
              >
                <Image
                  src={member2}
                  alt="Miembro 2"
                  class="w-full h-full object-contain"
                />
              </div>
              <div
                class="h-24 flex items-center justify-center p-2 bg-gray-50 rounded-[5px] shadow"
              >
                <Image
                  src={member3}
                  alt="Miembro 3"
                  class="w-full h-full object-contain"
                />
              </div>
              <div
                class="h-24 flex items-center justify-center p-2 bg-gray-50 rounded-[5px] shadow"
              >
                <Image
                  src={member4}
                  alt="Miembro 4"
                  class="w-full h-full object-contain"
                />
              </div>
              <div
                class="h-24 flex items-center justify-center p-2 bg-gray-50 rounded-[5px] shadow"
              >
                <Image
                  src={member5}
                  alt="Miembro 5"
                  class="w-full h-full object-contain"
                />
              </div>
              <div
                class="h-24 flex items-center justify-center p-2 bg-gray-50 rounded-[5px] shadow"
              >
                <Image
                  src={member6}
                  alt="Miembro 6"
                  class="w-full h-full object-contain"
                />
              </div>
              <div
                class="h-24 flex items-center justify-center p-2 bg-gray-50 rounded-[5px] shadow col-span-2"
              >
                <Image
                  src={member7}
                  alt="Miembro 7"
                  class="w-full h-full object-contain"
                />
              </div>
            </div>
          </div>
          <!-- Desktop -->
          <div class="hidden md:block w-full">
            <div class="flex flex-wrap justify-between gap-4">
              <div
                class="flex-1 min-w-[30%] h-32 bg-gray-50 rounded-[5px] shadow p-4"
              >
                <Image
                  src={member1}
                  alt="Miembro 1"
                  class="w-full h-full object-contain"
                />
              </div>
              <div
                class="flex-1 min-w-[30%] h-32 bg-gray-50 rounded-[5px] shadow p-4"
              >
                <Image
                  src={member2}
                  alt="Miembro 2"
                  class="w-full h-full object-contain"
                />
              </div>
              <div
                class="flex-1 min-w-[30%] h-32 bg-gray-50 rounded-[5px] shadow p-4"
              >
                <Image
                  src={member3}
                  alt="Miembro 3"
                  class="w-full h-full object-contain"
                />
              </div>
              <div
                class="flex-1 min-w-[22%] h-32 bg-gray-50 rounded-[5px] shadow p-4"
              >
                <Image
                  src={member4}
                  alt="Miembro 4"
                  class="w-full h-full object-contain"
                />
              </div>
              <div
                class="flex-1 min-w-[22%] h-32 bg-gray-50 rounded-[5px] shadow p-4"
              >
                <Image
                  src={member5}
                  alt="Miembro 5"
                  class="w-full h-full object-contain"
                />
              </div>
              <div
                class="flex-1 min-w-[22%] h-32 bg-gray-50 rounded-[5px] shadow p-4"
              >
                <Image
                  src={member6}
                  alt="Miembro 6"
                  class="w-full h-full object-contain"
                />
              </div>
              <div
                class="flex-1 min-w-[22%] h-32 bg-gray-50 rounded-[5px] shadow p-4"
              >
                <Image
                  src={member7}
                  alt="Miembro 7"
                  class="w-full h-full object-contain"
                />
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Slide 2: Historia -->
      <div class="slide p-4 hidden">
        <div
          class="p-8 bg-white shadow rounded-[5px] flex flex-col md:flex-row items-center md:h-[450px]"
        >
          <div class="md:w-1/2 flex flex-col justify-center">
            <h3 class="section-subtitle text-[var(--color-primary-500)] mb-2">
              Historia y experiencia
            </h3>
            <p class="section-text">
              Con más de 37 años en la industria eléctrica, HGB ha trabajado en
              sectores públicos y privados, incluyendo retail, industria,
              hospitales y más. Nuestra trayectoria respalda la calidad y
              confianza de nuestros servicios.
            </p>
          </div>
          <div
            class="md:w-1/2 mt-4 md:mt-0 flex items-center justify-center h-full"
          >
            <div class="w-4/5 h-full p-6">
              <img
                src={historia}
                alt="Historia"
                class="w-full h-full rounded-[5px] shadow-lg"
              />
            </div>
          </div>
        </div>
      </div>

      <!-- Controles -->
      <button
        id="about-prev"
        class="absolute top-1/2 left-2 transform -translate-y-1/2 bg-[var(--color-primary-500)] text-white p-2 rounded-full"
      >
        &#9664;
      </button>
      <button
        id="about-next"
        class="absolute top-1/2 right-2 transform -translate-y-1/2 bg-[var(--color-primary-500)] text-white p-2 rounded-full"
      >
        &#9654;
      </button>
    </div>

    <!-- Indicadores -->
    <div
      id="about-indicators"
      class="absolute bottom-14 md:bottom-16 left-1/2 transform -translate-x-1/2 flex space-x-2"
    >
    </div>
  </div>
</section>

<script type="module">
  const carousel = document.getElementById("about-carousel");
  const slides = carousel.querySelectorAll(".slide");
  const total = slides.length;
  let current = 0;
  const nextBtn = document.getElementById("about-next");
  const prevBtn = document.getElementById("about-prev");
  const indicators = document.getElementById("about-indicators");

  slides.forEach((_, idx) => {
    const dot = document.createElement("button");
    dot.className =
      "w-4 h-4 rounded-full bg-gray-300 transition-colors duration-300";
    dot.dataset.index = idx;
    dot.addEventListener("click", () => goTo(idx));
    indicators.appendChild(dot);
  });

  function update() {
    slides.forEach((slide, idx) => {
      if (idx === current) {
        slide.classList.remove("hidden");
      } else {
        slide.classList.add("hidden");
      }
    });
    indicators.querySelectorAll("button").forEach((btn, idx) => {
      if (idx === current) {
        btn.classList.replace("bg-gray-300", "bg-primary-500");
      } else {
        btn.classList.replace("bg-primary-500", "bg-gray-300");
      }
    });
  }

  function goTo(idx) {
    current = idx;
    update();
  }

  nextBtn.addEventListener("click", () => goTo((current + 1) % total));
  prevBtn.addEventListener("click", () => goTo((current - 1 + total) % total));

  update();
</script>
