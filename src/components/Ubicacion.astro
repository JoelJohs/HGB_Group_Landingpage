---
const apiKey = import.meta.env.GOOGLE_MAPS_API_KEY;
// ...existing frontmatter if any...
---

<section id="direccion" class="py-12 px-4 bg-[var(--color-background-50)]">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-bold mb-6 text-[var(--color-primary-500)]">
      Ubicación
    </h2>
    <p class="text-xl mb-8 text-[var(--color-text-900)]">
      Av. de los Insurgentes Sur 826, Col del Valle Centro, Benito Juárez, 03100
      Ciudad de México, CDMX
    </p>
    <div class="overflow-hidden rounded-lg shadow-lg mx-auto max-w-xl">
      <iframe
        width="100%"
        height="450"
        style="border:0"
        loading="lazy"
        allowfullscreen
        referrerpolicy="no-referrer-when-downgrade"
        src={`https://www.google.com/maps/embed/v1/place?key=${apiKey}&q=19.389092027854904,-99.17368160133185`}
      ></iframe>
    </div>
  </div>
</section>
